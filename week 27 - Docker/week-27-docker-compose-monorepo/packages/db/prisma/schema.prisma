generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  todos     Todo[]
}

model Todo {
  id        String   @id @default(uuid())
  task      String
  completed Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}